<h1>Hello Header 2</h1>
<div class="s-main-wrapper">
  <div class="s-logo-wrapper">
    <a class="s-logo-wrapper-link" href="{{shop.url}}">
      {% if section.settings['s-logo'] %}
        <img
          width="100%"
          height="100%"
          class="s-logo-wrapper-img"
          src="{{ section.settings.s-logo | image_url }}"
          alt="Scratch Logo"
        >
      {% else %}
        <p>Logo</p>
      {% endif %}
    </a>
  </div>
  {% comment %}
    <div class="s-menu-wrapper">
      {% for link in linklists['main-menu'].links %}
        <li>
          <a href="{{ link.url }}">{{ link.title }}</a>
        </li>
      {% endfor %}
    </div>
  {% endcomment %}
  <div class="s-menu-wrapper">
    <li><a href="#">Home</a></li>
    <li><a href="#">Catalog</a></li>
    <li><a href="#">Contact</a></li>
    <li>
      <a href="#">dropdown</a>
      <ul class="dropdown-content">
        <li><a href="#">Option 1</a></li>
        <li><a href="#">Option 2</a></li>
        <li><a href="#">Option 3</a></li>
      </ul>
    </li>
  </div>
</div>

<style>
    .s-main-wrapper {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .s-logo-wrapper-link {
      display: block;
      width: 100px;
    }

    .s-logo-wrapper-img {
      max-width: 100%;
    }

    .s-menu-wrapper {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .s-menu-wrapper li {
      margin-right: 20px;
      list-style: none;
    }

    .s-menu-wrapper li a {
      text-decoration: none;
      color: #000;
      text-decoration: none;
    }
  {% comment %} Dropdown {% endcomment %}
</style>

{% schema %}
{
  "name": "Header-scratch",
  "class": "header-scratch",
  "tag": "header",
  "settings": [
    {
      "type": "image_picker",
      "id": "s-logo",
      "label": "Logo"
    }
  ]
}
{% endschema %}
