<h1>Hello Header 2</h1>
<div class="s-main-wrapper">
  <div class="s-logo-wrapper">
    <a class="s-logo-wrapper-link" href="{{ shop.url }}">
      {% if section.settings['s-logo'] %}
        <img
          width="100%"
          height="100%"
          class="s-logo-wrapper-img"
          src="{{ section.settings.s-logo | image_url }}"
          alt="Scratch Logo"
        >
      {% else %}
        <p>Logo</p>
      {% endif %}
    </a>
  </div>

  <div class="s-menu-wrapper">
    <ul>
      {% for link in linklists['main-menu'].links %}
        <li class="menu-item">
          <a href="{{ link.url }}">{{ link.title }}</a>
          {% if link.links != blank %}
            <ul class="header-sub">
              {% for child in link.links %}
                <li class="header-sub-item">
                  <a href="{{ child.url }}" class="header-sub-anchor">{{ child.title }}</a>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </div>
</div>

<!-- CSS -->
<style>
  .s-main-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .s-logo-wrapper-link {
    display: block;
    width: 100px;
  }

  .s-logo-wrapper-img {
    max-width: 100%;
  }

  .s-menu-wrapper ul {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0;
    margin: 0;
  }

  .s-menu-wrapper li {
    margin-right: 20px;
    list-style: none;
    position: relative;
  }

  .s-menu-wrapper li a {
    text-decoration: none;
    color: #000;
  }

  /* Hide submenus by default */
  .header-sub {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background-color: #fff;
    border: 1px solid #ddd;
    padding: 0;
    z-index: 10;
    min-width: 150px;
  }

  /* Style for submenu items */
  .header-sub-item {
    padding: 10px;
  }

  .header-sub-item a {
    text-decoration: none;
    color: #333;
  }

  /* Show the submenu when parent li has the class 'open' */
  .menu-item.open > .header-sub {
    display: block;
  }

  /* Optional: Add transition for smoother dropdown appearance */
  .header-sub {
    transition: all 0.3s ease-in-out;
  }
</style>

<!-- JavaScript -->
<script>
  document.querySelectorAll('.menu-item').forEach((menuItem) => {
    menuItem.addEventListener('click', function (e) {
      // Close any other open dropdowns
      document.querySelectorAll('.menu-item').forEach((item) => {
        if (item !== menuItem) {
          item.classList.remove('open');
        }
      });

      // Toggle the clicked menu item
      menuItem.classList.toggle('open');
      e.stopPropagation(); // Prevent event from bubbling up
    });
  });

  // Close dropdown if clicked outside
  document.addEventListener('click', function () {
    document.querySelectorAll('.menu-item').forEach((item) => {
      item.classList.remove('open');
    });
  });
</script>

<!-- Schema -->
{% schema %}
{
  "name": "Header-scratch",
  "class": "header-scratch",
  "tag": "header",
  "settings": [
    {
      "type": "image_picker",
      "id": "s-logo",
      "label": "Logo"
    }
  ]
}
{% endschema %}
