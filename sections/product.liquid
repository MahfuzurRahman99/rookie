<h2>Welcome to Product Section</h2>

<div class="s-product-wrapper">
  {% for product in collections.all.products %}
    <div class="s-product-content">
      <a href="{{ product.url }}" class="s-product-link">
        <div class="s-product-img">
          <img
            width="100%"
            height="100%"
            src="{{ product.featured_image | image_url }}"
            alt="{{ product.title }}"
          >
        </div>
        <div class="s-product-title">
          <h3>{{ product.title }}</h3>
          <p>{{ product.price | money }}</p>
        </div>
      </a>
    </div>
  {% endfor %}
</div>

<style>
  h2 {
    text-align: center;
    font-size: 2em;
    color: #333;
    margin-bottom: 20px;
  }

  .s-product-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
    background-color: #f5f5f5;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .s-product-content {
    text-align: center;
    max-width: 300px;
    border: 1px solid #ddd;
    border-radius: 10px;
    background-color: #fff;
    padding: 20px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .s-product-content:hover {
    transform: scale(1.05);
  }

  .s-product-link {
    text-decoration: none;
    color: inherit;
  }

  .s-product-img img {
    max-width: 100%;
    height: auto;
    border-radius: 10px;
    margin-bottom: 15px;
  }

  .s-product-title h3 {
    font-size: 1.5em;
    color: #222;
    margin-bottom: 10px;
  }

  .s-product-title p {
    font-size: 1.2em;
    color: #555;
    font-weight: bold;
  }
</style>
