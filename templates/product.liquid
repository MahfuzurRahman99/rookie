<h1 class="page-title">You are on a single product page</h1>
<div class="product-wrapper">
  <!-- Product Image -->
  <div class="product-img">
    <img
      height="100%"
      width="100%"
      src="{{ product.featured_image | image_url }}"
      alt="{{ product.title }}"
      class="product-image"
    >
  </div>

  <!-- Product Details -->
