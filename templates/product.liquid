<h1 class="page-title">You are on a single product page</h1>
<div class="product-wrapper">
  <!-- Product Image -->
  <div class="product-img">
    <img
      height="100%"
      width="100%"
      src="{{ product.featured_image | image_url }}"
      alt="{{ product.title }}"
      class="product-image"
    >
  </div>

  <!-- Product Details -->
  <div class="product-details">
    <h2 class="product-title">{{ product.title }}</h2>
    <p class="product-price">{{ product.price | money }}</p>
    <p class="product-description">{{ product.description }}</p>

    <!-- Add to Cart Form -->
    <div class="product-form">
      {% form 'product', product %}
        {% if product.has_only_default_variant == false %}
          <select name="id">
            {% for variant in product.variants %}
              <option value="{{variant.id}}">
                {{ variant.title }}
              </option>
            {% endfor %}
          </select>
        {% else %}
          <p>There is no variant available for this product</p>
        {% endif %}
        <label for="quantity">Quantity:</label>
        <input type="number" id="quantity" name="quantity" value="1" min="1">
        <button type="submit" class="add-to-cart-btn">Add to Cart</button>
      {% endform %}
    </div>
  </div>
</div>

<style>
  /* Page Title */
  .page-title {
    font-size: 28px;
    font-family: Arial, sans-serif;
    margin-bottom: 40px;
    color: #333;
    text-align: center;
  }

  /* Product Wrapper */
  .product-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
    display: flex;
    justify-content: space-between;
    gap: 30px;
    border: 1px solid #eee;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    background-color: #f9f9f9;
    border-radius: 8px;
  }

  /* Product Image */
  .product-img {
    flex: 1;
    max-width: 40%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .product-img img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  /* Product Details */
  .product-details {
    flex: 2;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .product-title {
    font-size: 24px;
    color: #333;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .product-price {
    font-size: 20px;
    color: #2b8a3e;
    font-weight: bold;
    margin-bottom: 15px;
  }

  .product-description {
    font-size: 16px;
    line-height: 1.6;
    color: #555;
    margin-bottom: 20px;
  }

  /* Add to Cart Form */
  .product-form {
    margin-top: 20px;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .product-form label {
    font-size: 14px;
    color: #333;
    font-weight: bold;
  }

  .product-form select,
  .product-form input[type='number'] {
    padding: 10px;
    font-size: 16px;
    width: 100%;
    max-width: 250px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  .add-to-cart-btn {
    padding: 12px 20px;
    font-size: 16px;
    color: #fff;
    background-color: #2b8a3e;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .add-to-cart-btn:hover {
    background-color: #247330;
  }
</style>
